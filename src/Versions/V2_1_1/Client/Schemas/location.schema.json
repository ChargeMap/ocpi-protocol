{
  "title": "V2.1.1\\Location",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "minLength": 1,
      "maxLength": 39
    },
    "type": {
      "type": "string",
      "enum": [
        "ON_STREET",
        "PARKING_GARAGE",
        "UNDERGROUND_GARAGE",
        "PARKING_LOT",
        "OTHER",
        "UNKNOWN"
      ]
    },
    "name": {
      "type": [
        "string",
        "null"
      ],
      "minLength": 1,
      "maxLength": 255
    },
    "address": {
      "type": "string",
      "minLength": 1,
      "maxLength": 45
    },
    "city": {
      "type": "string",
      "minLength": 1,
      "maxLength": 45
    },
    "postal_code": {
      "type": "string",
      "minLength": 1,
      "maxLength": 10
    },
    "country": {
      "type": "string",
      "minLength": 3,
      "maxLength": 3
    },
    "coordinates": {
      "$ref": "common.json#/definitions/geo_location"
    },
    "related_locations": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "$ref": "common.json#/definitions/related_locations"
        }
      ]
    },
    "evses": {
      "type": [
        "array",
        "null"
      ],
      "items": {
        "$ref": "evse.schema.json"
      }
    },
    "directions": {
      "type": [
        "array",
        "null"
      ],
      "items": {
        "$ref": "common.json#/definitions/display_text"
      }
    },
    "operator": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "$ref": "common.json#/definitions/business_details"
        }
      ]
    },
    "suboperator": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "$ref": "common.json#/definitions/business_details"
        }
      ]
    },
    "owner": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "$ref": "common.json#/definitions/business_details"
        }
      ]
    },
    "facilities": {
      "type": [
        "array",
        "null"
      ],
      "items": {
        "type": "string",
        "enum": [
          "HOTEL",
          "RESTAURANT",
          "CAFE",
          "MALL",
          "SUPERMARKET",
          "SPORT",
          "RECREATION_AREA",
          "NATURE",
          "MUSEUM",
          "BUS_STOP",
          "TAXI_STAND",
          "TRAIN_STATION",
          "AIRPORT",
          "CARPOOL_PARKING",
          "FUEL_STATION",
          "WIFI"
        ]
      }
    },
    "time_zone": {
      "type": [
        "string",
        "null"
      ],
      "minLength": 1,
      "maxLength": 255
    },
    "opening_times": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "$ref": "common.json#/definitions/hours"
        }
      ]
    },
    "charging_when_closed": {
      "type": [
        "boolean",
        "null"
      ]
    },
    "images": {
      "type": [
        "array",
        "null"
      ],
      "items": {
        "$ref": "common.json#/definitions/image"
      }
    },
    "energy_mix": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "$ref": "common.json#/definitions/energy_mix"
        }
      ]
    },
    "last_updated": {
      "type": "string",
      "pattern": "^([0-9]{4})-(1[0-2]|0[0-9])-([0-2][0-9]|3[0-1])T([0-1][0-9]|2[0-4]):[0-5][0-9]:[0-5][0-9]Z?$"
    }
  },
  "required": [
    "id",
    "type",
    "address",
    "city",
    "postal_code",
    "country",
    "coordinates",
    "last_updated"
  ],
  "additionalProperties": false
}
